<%= stylesheet_link_tag 'login', media: 'all' %>

<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">

      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
             class="img-fluid" alt="Sample image">
      </div>

      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <%= form_with url: attempt_login_sessions_path, method: :post, local: true do |form| %>
          <!-- Email input -->
          <div data-mdb-input-init class="form-outline mb-4">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, value: params[:email], class: "form-control form-control-lg", placeholder: "Your email", required: true %>
          </div>

          <!-- Password input -->
          <div data-mdb-input-init class="form-outline mb-3">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, value: params[:password], class: "form-control form-control-lg", placeholder: "Your password", required: true %>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <%= form.submit 'Login', class: "btn btn-primary btn-lg", style: "padding-left: 2.5rem; padding-right: 2.5rem;" %>

            <p class="small fw-bold mt-2 pt-1 mb-0">
              Don't have an account? <%= link_to 'Register', new_user_path, class: 'link-success' %>
            </p>
            <p class="small fw-bold mt-2 pt-1 mb-0">
              <%= link_to 'Forgot password?', new_password_reset_path, class: 'link-danger' %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>