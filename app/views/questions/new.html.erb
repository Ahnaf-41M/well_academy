<div class="container min-vh-100 mt-4">

  <h1 class="row d-flex justify-content-center"><%= t('questions.submit_button') %></h1>

  <%= link_to "<< " + t('quizzes.dashboard.title'),
              dashboard_course_quizzes_path(@course),
              class: "btn btn-outline-dark btn-sm rounded-pill mb-3"
  %>
  <%= form_with model: @question, url: course_quiz_questions_path, local: true do |form| %>
    <div class="row d-flex justify-content-center">
      <%= render "form", form: form %>
      <%= form.submit t('questions.submit_button'), class: "btn btn-success" %>
    </div>
  <% end %>
</div>

<%= javascript_include_tag "question_form" %>
