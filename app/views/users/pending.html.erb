<div class="d-flex justify-content-center mt-2">
    <p class="fw-bold h1 text-center"> Pending Teachers </p>
</div>
<div class="d-flex justify-content-center mt-2">
    <div class="row" style="width: 70rem;">
        <% if @users.any? %>
                
            <div class="row">
                <div class="col"> <h6>Picture</h6></div>
                <div class="col"> <h6>Name</h6></div>
                <div class="col"> <h6>Email</h6></div>
                <div class="col"> <h6>Graduation Certificate</h6></div>
                <div class="col"> <h6>Post Graduation Certificate</h6></div>
                <div class="col"> <h6>Action</h6></div>
            </div>

            <% @users.each do |tmp_user| %>

                <div class="row mb-3">
                    <hr>
                    <div class="col"> 
                        <%= image_tag tmp_user.profile_picture.attached? ? url_for(tmp_user.profile_picture) : asset_path('no-image-available.jpg'), alt: "Profile picture", style: "width: 50px; height: 50px; border-radius: 50%;", title: "Profile picture" %>

                    </div>
                    <div class="col mt-2"> <%= tmp_user.name %> </div>
                    <div class="col mt-2"> <%= tmp_user.email %><br></div>
                    <div class="col mt-2"> <%= link_to "View", url_for(tmp_user.grad_certificate), target: "_blank" %></div>
                    <div class="col mt-2"> <%= link_to "View", url_for(tmp_user.postgrad_certificate), target: "_blank" %></div>
                    
                    <div class="col mt-2"> 
                        <div class="d-flex">
                                <%= button_to  'Approve', 
                                        approve_teacher_user_path(tmp_user),
                                        method: :post, 
                                        class: "btn btn-sm btn-outline-success me-2",
                                        onclick: "return confirm('Are you sure?');" %>
                                <%= button_to  'Reject', 
                                        reject_teacher_user_path(tmp_user),
                                        method: :post, 
                                        class: "btn btn-sm btn-outline-danger",
                                        onclick: "return confirm('Are you sure?');" %>
                        </div>
                    </div>
                </div>
            <% end %>
        <% else %>
            <h1>No users found.</h1>
        <% end %>
        
    </div>
</div>
