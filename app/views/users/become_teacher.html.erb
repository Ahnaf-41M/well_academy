<section class="vh-200" style="background-color: #eee;">
  <div class="container h-75">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <% if @user.grad_certificate.attached? %>
                    <p class="text-center h3 fw-bold mb-3 mt-1 text-success">You have already applied. Your request is in process. Thank you!</p>
                <% else %>
                    <p class="text-center h1 fw-bold mb-3 mt-1">Upload your certificates</p>
                    <p style="color: red;" class="text-center">* Please upload your Graduation or Post Graduation Certificates</p>
                    <%= form_with(model: @user, url: user_path(@user), class: "mx-1 mx-md-4", method: :patch) do |f| %>

                        <p><i class="fa-solid fa-file-pdf fa-lg fa-fw"></i>Graduation Certificate</p>
                        <div class="d-flex flex-row align-items-center mb-4">
                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                <%= f.file_field :grad_certificate, accept: "application/pdf", class: "form-control", required: true %>
                            </div>
                        </div>

                        <p><i class="fa-solid fa-file-pdf fa-lg fa-fw"></i>Post Graduation Certificate</p>
                        <div class="d-flex flex-row align-items-center mb-4">
                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                <%= f.file_field :postgrad_certificate, accept: "application/pdf", class: "form-control", required: true %>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <%= f.submit "Submit", class: "btn btn-outline-success btn-lg" %>
                        </div>
                    <% end %>
                <% end %>
                

              </div>
              
          </div>
        </div>
      </div>
    </div>
  </div>
</section>