<section class="vh-100" style="background-color: #eee;">
    <div class="container h-75">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <h1 class="text-center mb-3 fw-bold">Edit Lesson</h1>
                        <h5 class="text-center mb-3 fw-bold">Course Title: <span class="text-danger"><%= @course.title %></span></h5>

                        <%= form_with(model: @lesson, url: course_lesson_path(@course), local: true) do |f| %>
                            <%= render 'form', lesson: @lesson, f: f %>

                            <div class="d-grid mb-3">
                                <%= f.submit "Update", class: "btn btn-primary btn-lg", disable_with: 'Submitting...' %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
