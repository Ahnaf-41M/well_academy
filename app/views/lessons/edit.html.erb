<div class="container min-vh-100 mt-5">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-lg-12 col-xl-11">
      <div class="card text-black" style="border-radius: 25px;">
        <div class="card-body p-md-5">
          <h1 class="text-center mb-3 fw-bold"><%= t('lessons.edit.title') %></h1>
          <h5 class="text-center mb-3 fw-bold">
            <%= t('course_title', default: "Course Title") %>: <span class="text-danger"><%= @course.title %></span>
          </h5>

          <%= form_with(model: @lesson, url: course_lesson_path(@course), local: true) do |f| %>
            <%= render 'form', lesson: @lesson, f: f %>

            <div class="d-grid mb-3">
              <%= f.submit t('lessons.edit.submit'), class: "btn btn-primary btn-lg", disable_with: t('submitting', default: "Submitting...") %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
