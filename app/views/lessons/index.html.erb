<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="justify-content-center mt-2">
      <p class="fw-bold h1 text-center"> Lessons </p>
      <h5 class="text-center mb-3 fw-bold">Course Title: <span class="text-danger"><%= @course.title %></span></h5>
    </div>


    <% if @lessons.present? %>
      <% @lessons.each do |tmp_lesson| %>
        <div class="card mb-2">
          <h5 class="card-header"><%= tmp_lesson.title %></h5>
          <div class="card-body">
            <h5 class="card-title">
              <video width="640" height="360" controls>
                <source src="<%= url_for(tmp_lesson.video) %>" type="video/mp4">
              </video>
            </h5>


            <% if @user.teacher? %>
              <div class="d-flex">
                <%= link_to "Edit", edit_course_lesson_path(@course, tmp_lesson), class: "btn btn-sm btn-warning me-2" %>
                <%= button_to "Delete", course_lesson_path(@course, tmp_lesson), method: :delete, class: "btn btn-sm btn-danger", onclick: "return confirm('Are you sure you want to delete?');" %>
              </div>
            <% end %>


          </div>
        </div>
      <% end %>
    <% else %>

      <div class="d-flex justify-content-center mt-5">
        <h3 class="text-danger"> No Lessons available. <br></h3>
      </div>
      <div class="d-flex justify-content-center mt-5">
        <%= link_to "Add lessons", new_course_lesson_path(@course), class: "btn btn-success btn-lg mb-1" %>
      </div>
    <% end %>
  </div>
</section>
