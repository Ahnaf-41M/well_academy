<h1 class="d-flex justify-content-center fw-bold mt-3">
  <%= t('password_resets.enter_new_password') %>
</h1>

<div class="min-vh-100">
  <div class="d-flex justify-content-center mt-2">
    <%= form_with model: @user, url: password_reset_path(params[:reset_password_token]), class: "form-control w-25", local: true do |f| %>
      <p class="fw-bold"> <%= t('password_resets.password') %><span class="text-danger">*</span></p>
      <%= f.password_field :password, value: @user.password, class: "form-control mb-3", required: true %>
      <p class="fw-bold"><%= t('password_resets.password_confirmation') %> <span class="text-danger">*</span></p>
      <%= f.password_field :password_confirmation, value: @user.password_confirmation, class: "form-control mb-3", required: true %>
      <div class="d-grid gap-2">
        <%= f.submit t('password_resets.update_password'), class: "btn btn-lg btn-success" %>
      </div>
    <% end %>
  </div>
</div>