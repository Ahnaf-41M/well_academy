<section class="vh-100" style="background-color: #eee;">
    <div class="container h-75">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">

                    <div class="row justify-content-center">
                        <h1 class="text-center mb-5 fw-bold">Create Category</h1>
                        <%= form_with(model: @category, class: "mx-1 mx-md-4", method: :post) do |f| %>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                    <%= f.text_field :name, class: "form-control", placeholder: "Course category name", required: true %>
                                </div>
                            </div>

                            <div class="d-flex flex-row align-items-center mb-4">
                                <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                    <%= f.text_area :description, class: "form-control", placeholder: "Course category description", required: true %>
                                </div>
                            </div>

                            <div class="d-grid ms-4 mb-3 mb-lg-4">
                                <%= f.submit "Create", class: "btn btn-primary btn-lg", disable_with: 'Submiting...' %>
                            </div>
                        <% end %>

                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</section>