<div class="d-flex justify-content-center mt-2 mb-4">
    <p class="fw-bold h1 text-center"> Course Categories </p>
</div>
<div class="d-flex justify-content-center mt-2">
    <div class="row" style="width: 70rem;">
        <% if @categories.any? %>
                
            <div class="row">
                <div class="col"> <h6>Category Name</h6></div>
                <div class="col"> <h6>Action</h6></div> 
            </div>

            <% @categories.each do |tmp_category| %>

                <div class="row mb-3">
                    <hr>
                    <div class="col mt-2"> <%= tmp_category.name %> </div>
                    <div class="col mt-2"> 
                        <div class="d-flex">
                                <%= link_to  'Edit Category', 
                                        edit_category_path(tmp_category),
                                        class: "btn btn-sm btn-warning me-2" %>
                                <%= button_to  'Delete Category', 
                                                category_path(tmp_category), 
                                                method: :delete, 
                                                class: "btn btn-sm btn-danger", 
                                                onclick: "return confirm('Are you sure?');" %>

                        </div>
                    </div>
                </div>
            <% end %>
        <% else %>
            <h1>No categories found.</h1>
        <% end %>
        
    </div>
</div>
