<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="d-flex justify-content-center mt-2">
            <p class="fw-bold h1 text-center"> Course Management </p>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr class="h5">
                    <th scope="col">Title</th>
                    <th scope="col">Teacher</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
        
            <% if @courses.any? %>
                <% @courses.each do |tmp_course| %>
                    <tbody>
                        <tr>
                            <td class="h6"><%= tmp_course.title.titleize %></td>
                            <td class="h6"><%= User.find(tmp_course.teacher_id).name %></td>
                            <td class="h6"><%= Category.find(tmp_course.category_id).name %></td>
                            <td class="h6"><%= tmp_course.price %> $</td>
                            <td class="h6 d-flex">
                                <%= link_to "Edit", edit_course_path(tmp_course), class: "btn btn-sm btn-warning me-2" %>
                                <%= button_to "Delete", course_path(tmp_course), method: :delete, class: "btn btn-sm btn-danger", onclick: "return confirm('Are you sure?');" %>
                            </td>
                        </tr>
                    </tbody>
                <% end %>
            <% else %>
                <h1 class="text-center text-danger">No courses found.</h1>
            <% end %>
        </table>
    </div>
</section>
