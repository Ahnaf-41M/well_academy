<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-lg-12 col-xl-11">
      <div class="card text-black" style="border-radius: 25px;">
        <div class="card-body p-md-5">
          <div class="row justify-content-center">
            <h1 class="text-center mb-3 fw-bold"><%= t('courses.new.title') %></h1>
            <%= form_with(model: @course, class: "mx-1 mx-md-4", method: :post) do |f| %>
              <%= render 'form', course: @course, user: current_user, f: f %>

              <div class="d-grid mb-3 mb-lg-4">
                <%= f.submit t('submit_button'), class: "btn btn-primary btn-lg", disable_with: 'Submiting...' %>
              </div>

            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
