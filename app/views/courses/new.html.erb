<section class="vh-200" style="background-color: #eee;">
    <div class="container h-75">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <h1 class="text-center mb-3 fw-bold">Create Course</h1>
                            <%= form_with(model: @course, class: "mx-1 mx-md-4", method: :post) do |f| %>
                                <%= render 'form', course: @course, user: @user, f: f %>

                                <div class="d-grid mb-3 mb-lg-4">
                                    <%= f.submit "Create", class: "btn btn-primary btn-lg", disable_with: 'Submiting...' %>
                                </div>
                                
                            <% end %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>